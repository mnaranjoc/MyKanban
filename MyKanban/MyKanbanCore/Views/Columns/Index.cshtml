@model IEnumerable<MyKanbanCore.Models.Column>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (ViewBag.BoardId != null)
    {
        <a asp-action="Create" asp-route-id="@ViewBag.BoardId">Create New</a>
    }
    else
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Board)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Board.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColumnId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ColumnId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ColumnId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
